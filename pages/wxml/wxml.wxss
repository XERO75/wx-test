input, textarea, picker{
  padding: 8px;
  background: #fff;
  margin: 8px;
  border: 1px solid #ddd;
  border-radius: 4px;
  width: auto;
}

form {
  width: 100vw;
}

image, .image {
  width: 100%;
}

movable-area {
  width: 100vh;
  height: 50vh;
  background: #ededed;
}
movable-view {
  width: 50px;
  height: 50px;
  background: #000;
}

button {
  margin: 8px;
}
.red {
  background: #db2828;
}
.yellow {
  background: #fbbd08;
}
.blue {
  background: #2185d0;
}
.lighten {
  opacity: 0.85;
}
.view-container {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  height: 100vh;
}
.view-container view {
  width: 100%;
  height: 100%;
}
.view-container text {
  color: #fff;
  padding: 16px;
  display: block;
  font-size: 32px;
}
swiper-item > image {
  width: 100%;
}
